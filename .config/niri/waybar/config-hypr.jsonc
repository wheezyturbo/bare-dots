{
  "layer": "bottom",
  "position": "top",
  "margin-top": 4,
  "margin-bottom": 0,
  "margin-left": 10,
  "margin-right": 10,
  "spacing": 8, // Gaps between modules (8px)

  "modules-left": [
    "clock#date",
    "hyprland/language",
    "wireplumber",
    "tray"
  ],
  "modules-center": [
    "hyprland/workspaces"
  ],
  "modules-right": [
    "cpu",
    "memory",
    "custom/gpu",
    "custom/storage",
    // "temperature",
    "backlight",
    "custom/power"
    // "battery"
  ],


  "clock#date": {
    "format": "ğŸ•™ {:%H:%M  ğŸ“… %d-%m %a}", // Icon: calendar-alt
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "calendar": {
      "mode": "year",
      "mode-mon-col": 3,
      "weeks-pos": "right",
      "on-scroll": 1,
      "format": {
        "months": "<span color='#eebebe'><b>{}</b></span>",
        "days": "<span color='#ffe6ff'><b>{}</b></span>",
        "weeks": "<span color='#c6a0f6'><b>W{}</b></span>",
        "weekdays": "<span color='#eebebe'><b>{}</b></span>",
        "today": "<span color='#ed8796'><b><u>{}</u></b></span>"
      }
    },
    "justify": "center"
  },
  "hyprland/language": {
    "format": "{short}",
  },
  "wireplumber": {
    "on-click": "pavucontrol",
    "on-click-right": "amixer sset Master toggle 1>/dev/null",
    "on-scroll-down": "wpctl set-volume -l 1.0 @DEFAULT_AUDIO_SINK@ 0.05-",
    "on-scroll-up": "wpctl set-volume -l 1.0 @DEFAULT_AUDIO_SINK@ 0.05+",
    "format": "{icon} {volume}%",
    "format-source": "ï„° ",
    "format-source-muted": "ï„± ",
    "format-muted": "<span foreground='#fab387'>ï‘¦  MUT</span>",
    "format-icons": {
      "headphone": "ï€¥ ",
      "hands-free": "ïŠ” ",
      "headset": "ïŠ” ",
      "phone": "ï‚• ",
      "portable": "ï‚• ",
      "car": "ï†¹ ",
      "default": "ğŸ”Š"
      // "default": ["ï€¦ ", "ï€§ ", "ï€¨ "]
    },
    "justify": "center"
  },
  "tray": {
    "icon-size": 15,
    "spacing": 10
  },

  "hyprland/workspaces": {
    "all-outputs": true,
    "format": "{}",
    "format-icons": {
      "1": "ä¸€",
      "2": "äºŒ",
      "3": "ä¸‰",
      "4": "å››",
      "5": "äº”",
      "6": "å…­",
      "7": "ä¸ƒ",
      "8": "å…«",
      "9": "ä¹",
      "10": "å",
    },
    //"on-scroll-up": "hyprctl dispatch workspace e+1 1>/dev/null",
    //"on-scroll-down": "hyprctl dispatch workspace e-1 1>/dev/null",
    "sort-by-number": true,
    "active-only": false,
    "justify": "center",
  },

  "cpu": {
    "format": "ğŸ’» {usage}% {max_frequency:0.1f}GHz",
    "on-click": "ghostty -e btop",
    "interval": 3,
    //"max-length": 14,
    //"min-length": 14,
    "justify": "center",
    "tooltip": false
  },
  "memory": {
    "format": "ğŸ {used:0.1f}G {swapUsed:0.1f}G",
    "interval": 3,
    "justify": "center",
    "tooltip": false
  },
  "custom/gpu": {
    "exec": "~/.config/waybar/modules/gpu-niri.sh",
    "format": "<span color=\"#ffe6ff\">{}</span>",
    "return-type": "json",
    "interval": 3,
    "justify": "center",
    "tooltip": false
  },
  "custom/storage": {
    "format": "ğŸ’¾ {}G",
    "format-alt": "ğŸ’¾ {percentage}%",
    "format-alt-click": "click",
    "return-type": "json",
    "interval": 60,
    "exec": "~/.config/waybar/modules/storage.sh",
    "justify": "center",
    "tooltip": false
  },
  "temperature": {
    "thermal-zone": 1,
    "interval": 3,
    "hwmon-path": "/sys/class/hwmon/hwmon3/temp1_input",
    "hwmon-path-abs": "/sys/devices/platform/coretemp.0/hwmon/hwmon6",
		"input-filename": "temp1_input",
    "critical-threshold": 80,
    "format-critical": "ï± {temperatureC}Â°C",
    "format": "{icon} {temperatureC}Â°C",
    "format-icons": ["ï‹‰"],
    //"max-length": 20,
    //"min-length": 7,
    "tooltip": false
  },
  "backlight": {
    "device": "intel_backlight",
    "format": "{icon}{percent}%",
    "format-icons": ["ó°ƒ ","ó°ƒŸ ","ó°ƒ  "],
    "on-scroll-down": "brightnessctl s 5%-",
    "on-scroll-up": "brightnessctl s +5%",
    "justify": "center",
    "tooltip": false
  },
  "battery": {
    "interval": 30,
    "states": {
      "good": 95,
      "warning": 30,
      "critical": 15
    },
    "format": "{icon} {capacity}",
    "format-charging": "ï–ƒ {capacity}",
    "format-plugged": "ï‡¦ {capacity}",
    "format-icons": [
      "ï‰„ ",
      "ï‰ƒ ",
      "ï‰‚ ",
      "ï‰ ",
      "ï‰€ "
    ],
    "justify": "center"
  },
  // "custom/power": {
